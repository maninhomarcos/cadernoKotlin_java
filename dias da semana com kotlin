fun main() {
    println("Digite um número de 1 a 7:")
    var num = readLine()!!.toInt()

    val result = when (num) {
        1 -> "Segunda-feira"
        2 -> "Terça-feira"
        3 -> "Quarta-feira"
        4 -> "Quinta-feira"
        5 -> "Sexta-feira"
        6 -> "Sábado"
        7 -> "Domingo"
        else -> "Número inválido. Digite um número de 1 a 7."
    }

    println("O número $num representa: $result")
}

